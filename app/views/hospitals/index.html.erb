<% @hospitals.each do |hospital|%>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <ol class="list-group ">
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
             <%= link_to hospital.name, hospital_path(hospital.id), class: "fw-bold" %><br>
              <%= hospital.address %>
            </div>
            <span class="badge bg-primary rounded-pill"><%= hospital.slots %> Available Slots</span>
          </li>
        </ol>
      </div>
    </div>
  </div>
<% end %>